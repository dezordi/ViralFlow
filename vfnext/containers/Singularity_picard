Bootstrap: docker
From: ubuntu:20.04

%post
version=2.27.2

apt update
apt upgrade -y
apt install -y wget default-jre default-jdk

# INSTALL R for plots
apt install -y dirmngr gnupg apt-transport-https ca-certificates software-properties-common
apt-key adv --keyserver keyserver.ubuntu.com --recv-keys E298A3A825C0D65DFD57CBB651716619E084DAB9
add-apt-repository 'deb https://cloud.r-project.org/bin/linux/ubuntu focal-cran40/'
#apt install libc6
apt install -y r-base #r-base-core r-base-html r-recommended r-base-dev

# Download picard.jar
mkdir /app/
cd /app
wget https://github.com/broadinstitute/picard/releases/download/${version}/picard.jar


%runscript
exec /bin/bash "$@"

%startscript
exec /bin/bash "$@"
